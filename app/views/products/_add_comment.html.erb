<%= form_for @comment do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="well well-sm">
          <div class="text-right">
            <a class="btn btn-success btn-green" id="open-review-box">
              <%= t(".rating_comment") %>
              <%= render "shared/error_messages", object: f.object %>
            </a>
          </div>
          <div class="row" id="post-review-box" >
            <div class="col-md-12">
              <form accept-charset="UTF-8" action="" method="post">
                <input id="ratings-hidden" name="rating" type="hidden">

                <%= f.text_field :content, class: "form-control animated",
                  placeholder: t(".write_comment"), cols: "50", rows: "5",
                  id: "new-review" %>
                <%= f.hidden_field :product_id %>

                <div class="text-right">
                  <div class="stars starrr" data-rating="0"></div>
                    <a class="btn btn-danger btn-sm" id="close-review-box"
                      href="#">
                      <span class="glyphicon glyphicon-remove"></span>
                        <%= t(".cancel") %>
                    </a>
                    <%= f.submit t(".comment"), class: "btn btn-success btn-lg" %>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
