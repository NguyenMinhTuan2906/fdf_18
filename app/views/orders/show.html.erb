<% provide :title, t("your_cart") %>
<div class="container cart-form">
  <div class="row">
    <div class="col-xs-8">
      <div class="panel panel-info">
        <div class="panel-heading">
          <div class="panel-title">
            <div class="row">
              <div class="col-xs-6">
                <h5>
                  <span class="glyphicon glyphicon-shopping-cart"></span>
                  <%= t("shopping_cart") + " ( " %>
                  <div id="carts_size">
                    <%= carts_size %>
                  </div>
                  <%= " product )" %>
                </h5>
              </div>
              <div class="col-xs-6 carts">
              <%= link_to t("continue"), root_path, class: "btn btn-success"%>
              </div>
            </div>
          </div>
        </div>
        <% if carts_size > 0 %>
          <div class="panel-body">
            <div id="carts_list">
              <%= render partial: "orders/product_cart", collection: @order.line_items %>
            </div>
            <div class="row">
              <div class="text-center">
                <div class="col-xs-9">
                  <h6 class="text-right"><%= t "add_items" %></h6>
                </div>
                <div class="col-xs-3">
                  <button id="pay" type="submit" class="btn btn-sm btn-block btn-success">
                    <%= t "pay" %>
                  </button>
                </div>
              </div>
            </div>
          </div>
        <% else %>
          <%= image_tag("no_product.png") %>
        <% end %>
        <div class="panel-heading">
          <div class="row text-center">
            <div class="col-xs-9">
              <h4 class="text-right">
                <div>
                  <%= t "total_cost" %>
                  <div id="total_cost">
                    <%= total_cost %>
                  </div>
                  <%= t "money_icon" %>
                </div>
              </h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
